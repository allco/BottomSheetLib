<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetLib">
        <item name="bslPaneBackground">?android:attr/colorBackground</item>
        <item name="bslPanePaddingTop">@dimen/bottom_sheet_padding_bottom</item>
        <item name="bslPanePaddingBottom">@dimen/bottom_sheet_padding_bottom</item>
        <item name="bslItemClickableHeight">@dimen/bottom_sheet_text_height</item>
        <item name="bslItemClickableBackground">?android:attr/selectableItemBackground</item>
        <item name="bslItemClickableTextAppearance">@style/BottomSheetLib.ClickableItem.DefaultTextAppearance</item>
        <item name="bslItemClickablePaddingIcon">@dimen/bottom_sheet_padding_double</item>
        <item name="bslItemClickablePaddingRight">@dimen/bottom_sheet_padding_default</item>
        <item name="bslItemClickablePaddingLeft">@dimen/bottom_sheet_padding_default</item>
        <item name="bslItemDividerHeight">@dimen/bottom_sheet_divider_height</item>
        <item name="bslItemDividerColor">@color/bottom_sheet_divider_color_grey</item>
        <item name="bslItemDividerMarginBottom">@dimen/bottom_sheet_padding_divider_bottom</item>
        <item name="bslItemDividerMarginTop">@dimen/bottom_sheet_padding_divider_top</item>
        <item name="bslItemTitleHeight">@dimen/bottom_sheet_title_height</item>
        <item name="bslItemTitlePaddingLeft">@dimen/bottom_sheet_padding_default</item>
        <item name="bslItemTitlePaddingRight">@dimen/bottom_sheet_padding_default</item>
        <item name="bslItemTitleTextAppearance">@style/BottomSheetLib.Title.DefaultTextAppearance</item>
    </style>

    <style name="BottomSheetLib.Title.DefaultTextAppearance"
           parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/bottom_sheet_item_text_title</item>
    </style>

    <style name="BottomSheetLib.ClickableItem.DefaultTextAppearance"
           parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/bottom_sheet_item_text</item>
    </style>

</resources>